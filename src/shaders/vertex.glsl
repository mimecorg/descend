varying vec3 position;
varying vec3 normal;

void main()
{
    position = vec3( gl_ModelViewMatrix * gl_Vertex );
    normal = gl_NormalMatrix * gl_Normal;

    gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}
